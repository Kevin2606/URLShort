<div class="w-full max-w-3xl mx-auto p-6">
  <div class="bg-white rounded-xl shadow-lg p-8">
    <h2 class="text-2xl font-semibold text-gray-800 mb-6">Acorta tu URL</h2>
    <form class="space-y-4">
      <div>
        <label for="url" class="block text-sm font-medium text-gray-700 mb-2">Ingresa tu URL</label>
        <input
          type="url"
          id="url"
          name="url"
          placeholder="https://ejemplo.com/url/muy/larga/que/necesita/acortarse"
          class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-transparent"
          required
        />
      </div>
      <button
        type="submit"
        class="bg-blue-400 w-full bg-gradient-to-r from-primary to-secondary text-white font-medium py-3 px-6 rounded-lg hover:opacity-90 transition-opacity"
      >
        Acortar URL
      </button>
    </form>
  </div>
</div>
